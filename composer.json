{
  "name": "andreas-glaser/dc-event-bundle",
  "type": "symfony-bundle",
  "keywords": [
    "symfony",
    "doctrine",
    "event",
    "database"
  ],
  "description": "Doctrine Custom Event Bundle - This bundle attaches an event handler during preFlush, allowing you to persist, update and remove entities while having access to change sets.",
  "homepage": "https://github.com/andreas-glaser/dc-event-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Andreas Glaser",
      "email": "andreas.glaser@protonmail.com"
    }
  ],
  "require": {
    "php": "^7",
    "doctrine/orm": "^2.5",
    "andreas-glaser/php-helpers": "^1",
    "symfony/framework-bundle": "^2.8"
  },
  "require-dev": {
    "symfony/phpunit-bridge": "^3.2",
    "phpunit/phpunit": "@stable",
    "symfony/var-dumper": "@stable",
    "doctrine/data-fixtures": "@stable"
  },
  "autoload": {
    "psr-4": {
      "AndreasGlaser\\DCEventBundle\\": ""
    },
    "exclude-from-classmap": [
      "Tests/"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.2-dev"
    }
  }
}
